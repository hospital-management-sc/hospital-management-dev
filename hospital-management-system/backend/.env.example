# ============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ============================================
# Format: postgresql://user:password@host:port/database
# Local: postgresql://hospital_user:hospital_password@localhost:5432/hospital_db
# Docker: postgresql://hospital_user:hospital_password@localhost:5432/hospital_db
# Supabase: postgresql://[user]:[password]@[host]:5432/[database]

DATABASE_URL="postgresql://hospital_user:hospital_password@localhost:5432/hospital_db"

# ============================================
# ENVIRONMENT
# ============================================

NODE_ENV=development
# Options: development, staging, production

# ============================================
# SERVER CONFIGURATION
# ============================================

PORT=5000
BACKEND_URL=http://localhost:5000

# ============================================
# AUTHENTICATION (JWT)
# ============================================

JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRE=7d

# ============================================
# CORS CONFIGURATION
# ============================================

CORS_ORIGIN=http://localhost:5173
# For multiple origins, separate with comma:
# CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
# Options: error, warn, info, debug

# Logging
LOG_LEVEL=debug

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
